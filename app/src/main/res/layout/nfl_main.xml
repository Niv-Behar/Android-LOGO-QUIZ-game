<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/back"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/back"
            />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layoutDirection="ltr">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="43sp"
            android:textColor="@color/num"
            android:text="@string/completed"
            android:layout_gravity="center"
            android:background="@color/fadewhite"
            android:textStyle="bold"
            android:fontFamily="@font/bold"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:id="@+id/compplete"
            />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/nfl"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/nUp_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/fUp_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="5dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/lUp_btn"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="Z"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/zDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="O"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/oDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="C"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/cDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="L"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/lDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="V"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/vDown_btn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            android:id="@+id/fDown_btn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/down_letters_background"
            android:text="F"
            android:textColor="#fff"
            android:textSize="30dp" />

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="W"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/wDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="N"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/nDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="K"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/kDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="u"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/uDown_btn"/>
    </LinearLayout>
        <Button
            android:id="@+id/next"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:background="@drawable/strt"
            android:fontFamily="@font/fifth"
            android:text="@string/next"
            android:textColor="@color/start"
            android:textSize="50sp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:enabled="false" />
</LinearLayout>
</RelativeLayout>