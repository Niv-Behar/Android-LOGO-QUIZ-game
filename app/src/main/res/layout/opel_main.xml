<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">
        <Button
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:background="@drawable/back"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="15dp"
            android:id="@+id/back"
            />

    </LinearLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layoutDirection="ltr">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="43sp"
        android:textColor="@color/num"
        android:text="@string/completed"
        android:layout_gravity="center"
        android:background="@color/fadewhite"
        android:textStyle="bold"
        android:fontFamily="@font/bold"
        android:layout_marginTop="10dp"
        android:visibility="invisible"
        android:id="@+id/compplete"
        />
    <ImageView
        android:layout_width="250dp"
        android:layout_height="240dp"
        android:src="@drawable/opel"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/oUp_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/pUp_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/eUp_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/up_letter_background"
            android:layout_margin="10dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:id="@+id/lUp_btn"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="R"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/rDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="O"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/oDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="H"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/hDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="B"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/bDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="L"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/lDown_btn"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="P"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/pDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="J"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/jDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="M"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/mDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="E"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/eDown_btn"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/down_letters_background"
            android:layout_margin="5dp"
            android:text="U"
            android:textColor="#fff"
            android:textSize="30dp"
            android:id="@+id/uDown_btn"/>
    </LinearLayout>
    <Button
        android:id="@+id/next"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:background="@drawable/strt"
        android:fontFamily="@font/fifth"
        android:text="@string/next"
        android:textColor="@color/start"
        android:textSize="50sp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:visibility="invisible"
        android:enabled="false" />
</LinearLayout>
</RelativeLayout>